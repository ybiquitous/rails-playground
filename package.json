{
  "name": "rails-playground",
  "private": true,
  "dependencies": {},
  "devDependencies": {
    "ybiq": "^0.4.3"
  },
  "scripts": {
    "lint:rb": "bin/bundle exec rubocop",
    "lint:rb:fix": "npm run lint:rb -- --auto-correct",
    "lint:rails": "bin/bundle exec rails_best_practices --test",
    "lint:js": "eslint --max-warnings=-1 --ignore-path=.gitignore --ext=.js --ext=.jsx .",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:md": "markdownlint *.md",
    "lint": "npm-run-all --print-name --print-label --parallel lint:*",
    "commitmsg": "commitlint -e",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{rb,rake,ru,jbuilder}": [
      "bin/bundle exec rubocop --force-exclusion --auto-correct",
      "bin/bundle exec rails_best_practices --test",
      "git add"
    ],
    "*.{js,jsx}": [
      "eslint --fix --max-warnings=-1 --no-ignore",
      "git add"
    ],
    "*.md": "markdownlint"
  }
}
