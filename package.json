{
  "name": "rails-playground",
  "private": true,
  "dependencies": {},
  "devDependencies": {
    "concurrently": "^3.5.0",
    "ybiq": "^0.2.0"
  },
  "scripts": {
    "lint:rb": "bundle exec rubocop",
    "lint:rb:fix": "npm run lint:rb -- --auto-correct",
    "lint:js": "eslint --max-warnings=-1 --ignore-path=.gitignore .",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:md": "markdownlint *.md",
    "lint": "concurrently \"npm run lint:rb\" \"npm run lint:js\" \"npm run lint:md\"",
    "commitmsg": "commitlint -e",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{rb,jbuilder}": [
      "bundle exec rubocop --force-exclusion --auto-correct",
      "git add"
    ],
    "*.{js,jsx}": [
      "eslint --fix --max-warnings=-1 --no-ignore",
      "git add"
    ],
    "*.md": "markdownlint"
  }
}
