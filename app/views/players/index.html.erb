<% title Player.model_name.human(count: 2) %>
<% description 'Player list' %>
<% set_meta_tags og: { title: title, type: 'website', url: request.url } %>
<% set_meta_tags twitter: { title: title, url: request.url } %>

<h1><%= title %></h1>

<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th><%= t(:id) %></th>
      <th><%= Player.human_attribute_name(:name) %></th>
      <th><%= Player.human_attribute_name(:status) %></th>
      <th><%= Player.human_attribute_name(:created_at) %></th>
      <th><%= Player.human_attribute_name(:updated_at) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.id %></td>
        <td><%= player.name %></td>
        <td><%= player.status %></td>
        <td><%= player.created_at %></td>
        <td><%= player.updated_at %></td>
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: t('confirm.destroy') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('new', model: Player), new_player_path %>
